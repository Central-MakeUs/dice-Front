{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "es2017"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "skipLibCheck": true,
    // alias 설정
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@axios/*": ["src/axios/*"],
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@zustands/*": ["src/zustands/*"],

      "@providers/*": ["src/providers/*"],
      "@hooks/*": ["src/hooks/*"],
      "@routes/*": ["src/routes/*"],
      "@layout/*": ["src/layout/*"],
      "@type/*": ["src/type/*"], // types는 불가능해서 type으로 대체
      "@utils/*": ["src/utils/*"],
      "@server/*": ["src/server/*"],
      "@config/*": ["src/config/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
